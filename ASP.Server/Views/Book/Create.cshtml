@using ASP.Server.Controllers
@model CreateBookModel
@{
    ViewData["Title"] = "Add a book";
}
<style>
.input-group {
    margin-top:10px;
    display:flex;
    justify-content:space-between;
    flex-wrap:wrap;
}
input, textarea, select {
    flex-basis:85%;
}
label {
    flex-basis:10%;
}
</style>

<!-- Voici une facon de faire, mais ce n'est pas la seul, a vous de jouer ! -->
<form asp-controller="Book" asp-action="Create">
    <div class="input-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div class="input-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" />
    </div>
    <div class="input-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" />
    </div> 
    <div class="input-group">
        <label asp-for="Genres">Genres</label>

           @foreach (var genre in Model.AllGenres)
        {
            <div>
                <input type="checkbox" name="Genres" value="@genre.Id" />
                <label for="@genre">@genre.Name</label>
            </div>
        }
            
    </div>
    <input type="submit" value="Add" style="width: 100%; margin-top: 50px" />
</form>